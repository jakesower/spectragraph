{
	"name": "data-prism",
	"license": "AGPL-3.0",
	"workspaces": [
		"packages/*"
	],
	"type": "module",
	"version": "1.0.0",
	"scripts": {
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "npm run build && changeset publish",
		"build": "npm run build --workspaces --workspace=@data-prism/core --workspace=@data-prism/utils --workspace=@data-prism/memory-store --workspace=@data-prism/sqlite-store",
		"test": "npm run test --workspaces",
		"lint": "npm run lint --workspaces",
		"lint:fix": "npm run lint --workspaces -- --fix",
		"format:check": "npm run format:check --workspaces",
		"format:fix": "npm run format:fix --workspaces"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.6",
		"@eslint/js": "^9.32.0",
		"@rollup/plugin-commonjs": "^28.0.6",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"prettier": "^3.6.2",
		"rollup": "^4.45.3"
	}
}
