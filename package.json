{
	"name": "spectragraph",
	"license": "AGPL-3.0",
	"workspaces": [
		"packages/*"
	],
	"type": "module",
	"version": "1.0.0",
	"scripts": {
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "npm run build && changeset publish",
		"build": "npm run build --workspaces --workspace=@spectragraph/core --workspace=@spectragraph/utils --workspace=@spectragraph/memory-store --workspace=@spectragraph/sqlite-store",
		"test": "echo '\\nWorkspace Tests:\\n  npm run test:all    - Run all tests (continues on error)\\n  npm run test:ci     - Run all tests (stops on error, for CI)\\n  npm test -w <pkg>   - Run specific package\\n' && exit 1",
		"test:all": "npm run test --workspaces --if-present || echo '\\n⚠️  Some tests failed\\n'",
		"test:ci": "npm run test --workspaces",
		"lint": "npm run lint --workspaces",
		"lint:fix": "npm run lint --workspaces -- --fix",
		"format:check": "prettier --check \"README.md\" \"docs/**/*.md\" && npm run format:check --workspaces",
		"format:fix": "prettier --write \"README.md\" \"docs/**/*.md\" && npm run format:fix --workspaces"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@eslint/js": "^9.38.0",
		"@rollup/plugin-commonjs": "^28.0.9",
		"@rollup/plugin-node-resolve": "^16.0.3",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"prettier": "^3.6.2",
		"rollup": "^4.52.5"
	},
	"dependencies": {
		"es-toolkit": "^1.41.0"
	}
}
