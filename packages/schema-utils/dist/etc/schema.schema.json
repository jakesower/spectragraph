{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A representation of a schema for use by polygraph",
    "type": "object",
    "required": ["resources"],
    "additionalProperties": false,
    "properties": {
        "title": {
            "type": "string",
            "description": "The schema's title"
        },
        "meta": {},
        "resources": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "$ref": "#/definitions/resource"
                }
            },
            "minProperties": 1,
            "propertyNames": { "pattern": "^([a-z])([A-Za-z0-9_]+)$" }
        }
    },
    "definitions": {
        "resource": {
            "type": "object",
            "properties": {
                "singular": { "type": "string" },
                "attributes": {
                    "$ref": "#/definitions/attributes"
                },
                "relationships": {
                    "$ref": "#/definitions/relationships"
                },
                "meta": {}
            },
            "required": ["attributes", "relationships"],
            "additionalProperties": false
        },
        "attributes": {
            "type": "object",
            "patternProperties": {
                "^([a-z])([A-Za-z0-9_]+)$": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "$ref": "#/defintions/attributeType"
                        },
                        "meta": {}
                    },
                    "required": ["type"]
                }
            },
            "minProperties": 1,
            "additionalProperties": false,
            "propertyNames": { "pattern": "^([a-z])([A-Za-z0-9_]+)$" }
        },
        "relationships": {
            "type": "object",
            "patternProperties": {
                "^([a-z])([A-Za-z0-9_]+)$": {
                    "oneOf": [
                        {
                            "type": "object",
                            "properties": {
                                "type": { "type": "string" },
                                "cardinality": { "enum": ["one", "many"] },
                                "inverse": { "type": "string" }
                            },
                            "required": ["type", "cardinality", "inverse"]
                        }, {
                            "type": "object",
                            "properties": {
                                "type": { "type": "string" },
                                "cardinality": { "enum": ["one", "many"] },
                                "inverses": {
                                    "type": "array",
                                    "properties": { "items": { "type": "string" } }
                                }
                            },
                            "required": ["type", "cardinality", "inverse"]
                        }
                    ]
                }
            },
            "additionalProperties": false,
            "propertyNames": { "pattern": "^([a-z])([A-Za-z0-9_]+)$" }
        },
        "attributeType": {
            "oneOf": [
                { "enum": ["boolean", "date", "datetime", "integer", "number", "string", "text", "uuid"] },
                { "type": "array", "minItems": 1, "maxItems": 1, "items": { "$ref": "#/definitions/attributeType" } },
                { "$ref": "#/definitions/attributes" }
            ]
        }
    }
}
